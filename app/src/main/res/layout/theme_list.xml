<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginAndPaddingForAllViews">

    <androidx.cardview.widget.CardView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginAndPaddingForAllViews"
        app:cardCornerRadius="@dimen/cardRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/list_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginAndPaddingForAllViews"
            android:src="@drawable/gradient_two_colors_theme1"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/list_state_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/marginAndPaddingForAllViews"
            android:drawableTop="@drawable/ic_lock"
            android:gravity="center"
            android:text="@string/locked_str"
            android:textColor="@color/white"
            android:textSize="@dimen/startTextSize" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/list_points_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_star"
        android:padding="@dimen/marginAndPaddingForAllViews"
        android:drawablePadding="@dimen/marginAndPaddingForAllViews"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/startTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>